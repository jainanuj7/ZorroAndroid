<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape>
        <corners android:radius="25dp" />
        <gradient android:angle="90" android:type="linear" android:startColor="#49c5da" android:endColor="#07b5d0" />
        <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" />

    </shape>
</item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="25dp" />
            <gradient android:angle="90" android:type="linear" android:startColor="#04B4AE" android:endColor="#07b5d0" />
            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" />
        </shape>
    </item>
</selector>